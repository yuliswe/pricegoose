{
    "compilerOptions": {
        "target": "ES6",
        "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": true,
        "noEmit": true,
        "baseUrl": ".",
        "typeRoots": [
            "tmp/npm/web/node_modules/@types", // development only
            "tmp/npm/test/node_modules/@types", // development only
        ],
        "paths": {
            "*": [
                "site/src/web/*",
                "tmp/npm/test/node_modules/*", // development only
                "tmp/npm/web/node_modules/*", // development only
                "tmp/npm/test/node_modules/@types/*", // development only
                "tmp/npm/web/node_modules/@types/*", // development only
            ]
        }
    },
    "exclude": [
        "node_modules",
    ],
    "include": [
        "**/*"
    ]
}
